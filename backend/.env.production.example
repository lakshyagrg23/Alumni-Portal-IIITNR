# ============================================
# BACKEND ENVIRONMENT VARIABLES - PRODUCTION
# ============================================
# Copy this file to .env for production deployment
# Update with your actual production values

# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
NODE_ENV=production
PORT=5000

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
# Use full connection string with SSL for production
# For managed databases (AWS RDS, Azure, etc.)
DATABASE_URL=postgresql://username:password@production-host:5432/alumni_portal

# Individual parameters (if not using connection string)
DB_HOST=production-host
DB_PORT=5432
DB_NAME=alumni_portal
DB_USER=production_user
DB_PASSWORD=strong_production_password

# ============================================
# JWT AUTHENTICATION
# ============================================
# CRITICAL: Generate a strong secret for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_a_strong_random_secret_for_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Production: Use professional email service (SendGrid, AWS SES, Mailgun)
# Example for Gmail (not recommended for production):
EMAIL_SERVICE=gmail
EMAIL_USER=no-reply@iiitnr.edu.in
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=IIIT Naya Raipur Alumni Portal <no-reply@iiitnr.edu.in>

# Email verification token expiry (in hours)
EMAIL_VERIFICATION_TOKEN_EXPIRY=24

# ============================================
# FRONTEND URLS
# ============================================
# Production frontend URL (HTTPS required)
FRONTEND_URL=https://alumni.iiitnr.ac.in

# ============================================
# GOOGLE OAUTH CONFIGURATION
# ============================================
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
# Update with production backend URL
GOOGLE_CALLBACK_URL=https://api.alumni.iiitnr.ac.in/api/auth/google/callback

# ============================================
# LINKEDIN OAUTH CONFIGURATION
# ============================================
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_production_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_production_linkedin_client_secret
# Must match LinkedIn app production settings
LINKEDIN_REDIRECT_URI=https://alumni.iiitnr.ac.in/linkedin

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ============================================
# CLOUDINARY (RECOMMENDED for production)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# ============================================
# RATE LIMITING
# ============================================
# Stricter limits for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# ============================================
# CORS CONFIGURATION
# ============================================
# Only allow production frontend domains
CORS_ORIGINS=https://alumni.iiitnr.ac.in,https://www.iiitnr.ac.in

# ============================================
# PRODUCTION SETTINGS
# ============================================
LOG_QUERIES=false
DEBUG_MODE=false

# ============================================
# INSTITUTE CONFIGURATION
# ============================================
INSTITUTE_EMAIL_DOMAIN=@iiitnr.edu.in
DEFAULT_ADMIN_EMAIL=admin@iiitnr.edu.in
DEFAULT_ADMIN_PASSWORD=Strong_Production_Password_Change_Immediately!

# ============================================
# API DOCUMENTATION
# ============================================
API_DOCS_URL=/api/docs
API_VERSION=1.0.0

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=info
# ENABLE_PROFILING=false
