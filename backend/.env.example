# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=development
PORT=5000

# PostgreSQL Database Configuration
# For local PostgreSQL: postgresql://username:password@localhost:5432/alumni_portal
# For remote PostgreSQL: postgresql://username:password@remote-host:5432/alumni_portal
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/alumni_portal

# Alternative individual database variables
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alumni_portal
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
# Generate a strong random secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Gmail Example)
# For Gmail: Use App Password from https://myaccount.google.com/apppasswords
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password
EMAIL_FROM=IIIT Naya Raipur Alumni Portal <your-email@gmail.com>

# Frontend URL Configuration
# For local frontend: http://localhost:3000
# For deployed frontend: https://your-frontend-domain.com
# This is used for email verification links
FRONTEND_URL=http://localhost:3000

# Token expiration (in hours)
EMAIL_VERIFICATION_TOKEN_EXPIRY=24

# Google OAuth Configuration
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Must match your backend URL + callback path
# For local: http://localhost:5000/api/auth/google/callback
# For deployed: https://your-backend-domain.com/api/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# LinkedIn OAuth Configuration
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
# Must match your frontend URL + LinkedIn callback path
LINKEDIN_REDIRECT_URI=http://localhost:3000/linkedin

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Cloudinary Configuration (Optional - for cloud storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_GENERAL_MAX=1000
RATE_LIMIT_AUTH_MAX=100
# RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
# Comma-separated list of allowed origins
# For local with local frontend: http://localhost:3000,http://127.0.0.1:3000
# For remote backend with local frontend: http://localhost:3000,http://127.0.0.1:3000
# For production: https://your-frontend-domain.com,https://www.your-frontend-domain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Development Settings
LOG_QUERIES=true
DEBUG_MODE=true

# Institute Configuration
INSTITUTE_EMAIL_DOMAIN=@iiitnr.edu.in
DEFAULT_ADMIN_EMAIL=admin@iiitnr.edu.in
DEFAULT_ADMIN_PASSWORD=AdminPassword123!

