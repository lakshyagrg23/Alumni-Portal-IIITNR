# Shared Development Environment (Supabase/Team)
# Copy this to .env.development for shared team development

NODE_ENV=development
PORT=5000

# Supabase PostgreSQL Database (replace with your Supabase credentials)
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT_REF].supabase.co:5432/postgres

# JWT Configuration (use different secret than local)
JWT_SECRET=shared-dev-jwt-secret-different-from-local-environment
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth Configuration (shared test credentials)
GOOGLE_CLIENT_ID=shared_google_client_id
GOOGLE_CLIENT_SECRET=shared_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Email Configuration (shared test account)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=team_test_email@gmail.com
EMAIL_PASS=team_app_password
EMAIL_FROM=noreply@iiitnr.edu.in

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Cloudinary Configuration (shared account)
CLOUDINARY_CLOUD_NAME=team_cloudinary_name
CLOUDINARY_API_KEY=team_cloudinary_key
CLOUDINARY_API_SECRET=team_cloudinary_secret

# Rate Limiting (moderate for shared development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_GENERAL_MAX=500
RATE_LIMIT_AUTH_MAX=50
# RATE_LIMIT_MAX_REQUESTS=500

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Shared development settings (less verbose logging)
LOG_QUERIES=false
DEBUG_MODE=false

# Institute Configuration
INSTITUTE_EMAIL_DOMAIN=@iiitnr.edu.in
DEFAULT_ADMIN_EMAIL=admin@iiitnr.edu.in
DEFAULT_ADMIN_PASSWORD=SharedAdminPassword123!
