{
  "name": "iiit-nr-alumni-portal-backend",
  "version": "1.0.0",
  "description": "Backend API for IIIT Naya Raipur Alumni Portal",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:local": "node -r dotenv/config src/server.js dotenv_config_path=.env.local",
    "dev:shared": "node -r dotenv/config src/server.js dotenv_config_path=.env.development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "NODE_ENV=test npm run db:setup:shared && jest --config=jest.integration.js",
    "migrate": "node src/config/migrate.js migrate",
    "migrate:local": "node -r dotenv/config src/config/migrate.js migrate dotenv_config_path=.env.local",
    "migrate:shared": "node -r dotenv/config src/config/migrate.js migrate dotenv_config_path=.env.development",
    "seed": "node src/config/migrate.js seed",
    "seed:local": "node -r dotenv/config src/config/migrate.js seed dotenv_config_path=.env.local",
    "seed:shared": "node -r dotenv/config src/config/migrate.js seed dotenv_config_path=.env.development",
    "reset-db": "node src/config/migrate.js reset",
    "reset-db:local": "node -r dotenv/config src/config/migrate.js reset dotenv_config_path=.env.local",
    "db:setup": "node src/config/migrate.js setup",
    "db:setup:local": "node -r dotenv/config src/config/migrate.js setup dotenv_config_path=.env.local",
    "db:setup:shared": "node -r dotenv/config src/config/migrate.js setup dotenv_config_path=.env.development",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "setup": "npm install && npm run db:setup"
  },
  "keywords": [
    "alumni",
    "portal",
    "iiit",
    "naya-raipur",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "IIIT Naya Raipur",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
