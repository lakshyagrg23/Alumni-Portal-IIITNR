# React + Vite Frontend Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration
# For local development: http://localhost:5000
# For remote backend: https://your-backend-domain.com or http://your-server-ip:5000
VITE_API_URL=http://localhost:5000
VITE_API_WS_URL=http://localhost:5000
VITE_API_TIMEOUT=10000

# Frontend URL Configuration
# For local development: http://localhost:3000
# For deployed frontend: https://your-frontend-domain.com
VITE_APP_URL=http://localhost:3000

# Google OAuth Configuration
# Get from: https://console.cloud.google.com/
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# LinkedIn OAuth Configuration
# Get from: https://www.linkedin.com/developers/apps
VITE_LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
# Must match the redirect URI registered in LinkedIn app settings
VITE_LINKEDIN_REDIRECT_URI=http://localhost:3000/linkedin
VITE_ENABLE_LINKEDIN_AUTH=true

# App Configuration
VITE_APP_NAME=IIIT NR Alumni Portal
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Official Alumni Portal for IIIT Naya Raipur

# Feature Flags
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_MESSAGING=true
VITE_ENABLE_NOTIFICATIONS=true

# Upload Configuration (in bytes)
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Theme Configuration
VITE_PRIMARY_COLOR=#1e3a8a
VITE_SECONDARY_COLOR=#f97316
VITE_SUCCESS_COLOR=#10b981

# External URLs
VITE_INSTITUTE_URL=https://www.iiitnr.ac.in
VITE_INSTITUTE_EMAIL_DOMAIN=@iiitnr.edu.in

# Development Configuration
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_MOCK_DATA=false
