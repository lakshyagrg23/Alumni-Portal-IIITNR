# ============================================
# FRONTEND ENVIRONMENT VARIABLES - PRODUCTION
# ============================================
# Copy this file to .env.production for production deployment
# Update with your actual production values

# ============================================
# API CONFIGURATION
# ============================================
# Production backend API URL (HTTPS required)
VITE_API_URL=https://api.alumni.iiitnr.ac.in/api

# WebSocket URL for real-time features (HTTPS/WSS required)
VITE_API_WS_URL=https://api.alumni.iiitnr.ac.in

# API request timeout (in milliseconds)
VITE_API_TIMEOUT=15000

# ============================================
# FRONTEND URL CONFIGURATION
# ============================================
# Production frontend URL (HTTPS required)
VITE_APP_URL=https://alumni.iiitnr.ac.in

# ============================================
# GOOGLE OAUTH CONFIGURATION
# ============================================
# Production Google OAuth client ID
# Get from: https://console.cloud.google.com/
VITE_GOOGLE_CLIENT_ID=your_production_google_client_id

# ============================================
# LINKEDIN OAUTH CONFIGURATION
# ============================================
# Production LinkedIn client ID
# Get from: https://www.linkedin.com/developers/apps
VITE_LINKEDIN_CLIENT_ID=your_production_linkedin_client_id

# Production LinkedIn redirect URI (must match app settings)
VITE_LINKEDIN_REDIRECT_URI=https://alumni.iiitnr.ac.in/linkedin

# Enable/disable LinkedIn authentication
VITE_ENABLE_LINKEDIN_AUTH=true

# ============================================
# APP CONFIGURATION
# ============================================
VITE_APP_NAME=IIIT NR Alumni Portal
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Official Alumni Portal for IIIT Naya Raipur

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_MESSAGING=true
VITE_ENABLE_NOTIFICATIONS=true

# ============================================
# UPLOAD CONFIGURATION
# ============================================
# Max file size in bytes (5MB)
VITE_MAX_FILE_SIZE=5242880

# Allowed file extensions (comma-separated)
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ============================================
# THEME CONFIGURATION
# ============================================
VITE_PRIMARY_COLOR=#1e3a8a
VITE_SECONDARY_COLOR=#f97316
VITE_SUCCESS_COLOR=#10b981

# ============================================
# EXTERNAL URLS
# ============================================
VITE_INSTITUTE_URL=https://www.iiitnr.ac.in
VITE_INSTITUTE_EMAIL_DOMAIN=@iiitnr.edu.in

# ============================================
# PRODUCTION CONFIGURATION
# ============================================
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_CONSOLE_LOGS=false

# ============================================
# ANALYTICS (Production)
# ============================================
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_ENABLE_ANALYTICS=true

# ============================================
# MONITORING (Optional)
# ============================================
# VITE_SENTRY_DSN=your_sentry_dsn
# VITE_ENABLE_ERROR_REPORTING=true

# ============================================
# CDN CONFIGURATION (Optional)
# ============================================
# VITE_CDN_URL=https://cdn.alumni.iiitnr.ac.in
# VITE_ASSETS_BASE_URL=https://cdn.alumni.iiitnr.ac.in/assets
